<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/santamariafondo"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.ik_2dm3.ijcapp.Activity_Santamaria">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clEnunciado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivEnunciado"
            android:layout_width="250dp"
            android:layout_height="166dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:alpha="0.6"
            android:scaleX="1.28"
            android:scaleY="1.28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/enunciadosantamaria" />

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btnsiguiente"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivEnunciado"
            app:layout_constraintVertical_bias="0.646" />

        <TextView
            android:id="@+id/tvEnunciado"
            android:layout_width="250dp"
            android:layout_height="166dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="6dp"
            android:text="@string/enunciado_Santa_Maria"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivEnunciado"
            app:layout_constraintEnd_toEndOf="@+id/ivEnunciado"
            app:layout_constraintStart_toStartOf="@+id/ivEnunciado"
            app:layout_constraintTop_toTopOf="@+id/ivEnunciado" />

    </android.support.constraint.ConstraintLayout>

    <android.widget.LinearLayout
        android:id="@+id/llPregunta1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="4">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clPregunta1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/ivPregunta1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:alpha=".60"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/preguntasantamaria" />

            <TextView
                android:id="@+id/tvPregunta1"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/pregunta1_Santa_Maria"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivPregunta1"
                app:layout_constraintEnd_toEndOf="@+id/ivPregunta1"
                app:layout_constraintStart_toStartOf="@+id/ivPregunta1"
                app:layout_constraintTop_toTopOf="@+id/ivPregunta1" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/llRespuestas1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:visibility="visible">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clRespuestaBuena"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/ivRespuestaBuena"
                    android:layout_width="150dp"
                    android:layout_height="99dp"
                    android:alpha="0.6"
                    app:srcCompat="@drawable/respuestasantamaria" />

                <TextView
                    android:id="@+id/tvRespuestaBuena"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/respuesta1_buena"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/ivRespuestaBuena"
                    app:layout_constraintEnd_toEndOf="@+id/ivRespuestaBuena"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivRespuestaBuena"
                    app:layout_constraintVertical_bias="0.0" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clRespuestaMala"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/ivRespuestaMala"
                    android:layout_width="150dp"
                    android:layout_height="99dp"
                    android:alpha="0.6"
                    app:srcCompat="@drawable/respuestasantamaria" />

                <TextView
                    android:id="@+id/tvRespuestaMala"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/respuesta1_mala"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/ivRespuestaMala"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivRespuestaMala" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvRespuestaCorregida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/respuesta1corregida"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="@string/respuesta1corregida"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="28sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnPregunta1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/btnsiguiente"
            android:visibility="gone" />

    </android.widget.LinearLayout>

</android.widget.LinearLayout>
